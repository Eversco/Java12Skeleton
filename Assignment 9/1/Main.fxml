<?import javafx.scene.control.*?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<FlowPane fx:id="root" fx:controller="ArithmeticCalc" xmlns:fx="http://javafx.com/fxml">
    <stylesheets>
    <URL value="@Main.css" />
    </stylesheets>
    <children>
        <VBox>
        <Label>Input First</Label>
        <TextField fx:id="firstField"></TextField>
        </VBox>
        <VBox>
        <Label>Input Second</Label>
        <TextField fx:id="secondField"></TextField>
        </VBox>
        <VBox>
        <Label>Output</Label>
        <TextField fx:id="third"></TextField>
        </VBox>
        <VBox>
        <Button fx:id="FC" onAction="#Add">Add</Button>
        <Button fx:id="CF" onAction="#Sub">Subtract</Button>
        <Button fx:id="Clear" onAction="#Mult">Multiply</Button>
        <Button fx:id="Div" onAction="#Div">Divide</Button>
        </VBox>
    </children>
</FlowPane>