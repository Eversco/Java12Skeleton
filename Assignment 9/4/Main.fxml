<?import javafx.scene.control.*?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<FlowPane fx:id="root" fx:controller="BMICalc" xmlns:fx="http://javafx.com/fxml">
    <stylesheets>
    <URL value="@Main.css" />
    </stylesheets>
    <children>
        <VBox>
        <Label>Weight(Kg)</Label>
        <TextField fx:id="firstField"></TextField>
        </VBox>
        <VBox>
        <Label>Height(Meter)</Label>
        <TextField fx:id="secondField"></TextField>
        </VBox>
        <VBox>
        <Label>Output</Label>
        <TextField fx:id="third"></TextField>
        </VBox>
        <VBox>
        <Button fx:id="FC" onAction="#Hours">Calculate</Button>
        </VBox>
    </children>
</FlowPane>